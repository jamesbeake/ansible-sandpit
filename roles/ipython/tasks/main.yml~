---
# file: ipython/tasks/main.yml
# vidoe: http://youtu.be/llX5bn1_BF4

- name: Install prequesite packages
  apt: pkg={{item}} state=present
  with_items:
  - python-pip
  - ipython
  - ipython-notebook
  - python-scipy
  - python-matplotlib
  - python-setuptools
  - python-sympy
  - python-pandas

- name: Install ipython via pip
  pip:  name='ipython[all]' extra_args='-U'
  