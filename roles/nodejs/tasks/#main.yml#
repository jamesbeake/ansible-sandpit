---
# file: nodejs/tasks/main.yml

- name: Add nodejs PPA
  apt_repository: repo='ppa:chris-lea/node.js'

- name: update repository cache
  apt: update_cache=yes
  tags: nodejs

- name: 
  apt: pkg={{ item }} state=present
  with_items:
  - nodejs
  tags: nodejs


